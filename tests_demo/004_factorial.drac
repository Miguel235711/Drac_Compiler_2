-- Iterative version for computing factorial of n.
iterative_factorial(n) {
    var result, i;
    result = 1;
    i = 2;
    while (i <= n) {
        result = result * i;
        inc i;
    }
    return result;
}

-- Recursive version for computing factorial of n.
recursive_factorial(n) {
    if (n <= 0) {
        return 1;
    } else {
        return n * recursive_factorial(n - 1);
    }
}

